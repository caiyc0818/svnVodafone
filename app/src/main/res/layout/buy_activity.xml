<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_dack_transparency"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:paddingRight="11dp"
        android:src="@drawable/delete" />

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close_iv"
        android:layout_centerHorizontal="true"
        android:text="@string/top_up"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_one"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_top"
        android:background="#333333"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Do you want to Buy Vodafone protect plus?"
            android:paddingTop="40dp"
            android:paddingBottom="50dp" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping_car"
            android:layout_above="@+id/tv_center"
            android:layout_centerHorizontal="true"/>
        
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/tv_center"
            android:background="#e60000"
            android:text="YES"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@+id/tv_yes"
            android:background="#999999"
            android:layout_marginTop="20dp"
            android:text="NO"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
        
    </RelativeLayout>

</RelativeLayout>