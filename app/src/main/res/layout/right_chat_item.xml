<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/chat_right_bg" >

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.huawei.vodafone.ui.myview.image.RoundImageView
                android:id="@+id/send_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_defult_photo" />

            <TextView
                android:id="@+id/send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/send_icon"
                android:text="55555"
                android:textColor="#707070"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@id/send_name"
                android:text="at"
                android:textColor="#707070"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/at"
                android:text="12-20 17:32"
                android:textColor="#707070"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_name"
                android:layout_toRightOf="@+id/send_icon"
                android:gravity="center_vertical"
                android:maxWidth="240dp"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:text="123"
                android:textColor="@color/support_gray_more"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/fail_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/message_content"
                android:background="@drawable/fail_send"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>