<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="11dp" >

        <ImageView
            android:id="@+id/title"
            android:layout_width="51.5dp"
            android:layout_height="53dp"
            android:src="@drawable/support_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/title"
            android:text="@string/request_call"
            android:textColor="@color/support_gray_more"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/support_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/support_top_gradient_bg" />

    <ScrollView
        android:id="@+id/request_call_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="4dp" >

            <LinearLayout
                android:id="@+id/step1_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_call_tip"
                    android:textColor="@color/support_gray_little"
                    android:textSize="@dimen/text_size_three" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/enter_number"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three" 
                    android:textStyle="bold">
                </TextView>

                <RelativeLayout
                    android:id="@+id/number_rl "
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/shape_faqs_et_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <EditText
                        android:id="@+id/number_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:inputType="number"
                        android:minWidth="80dp"
                        android:text="07785460399"
                        android:textColor="@color/support_gray_more"
                        android:textSize="@dimen/text_size_three" >
                    </EditText>

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_toRightOf="@id/number_et"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="(David&apos;s mobile)"
                        android:textColor="@color/support_gray_99"
                        android:textSize="@dimen/text_size_three" >
                    </TextView>

                    <ImageView
                        android:id="@+id/number_iv"
                        android:layout_width="11dp"
                        android:layout_height="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/chat_to_us_arrow" />
                </RelativeLayout>

                <com.huawei.vodafone.ui.myview.MyListview
                    android:id="@+id/number_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_faqs_et_bg2"
                    android:divider="#cccccc"
                    android:dividerHeight="0.5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@color/transparency"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/update_tv"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/support_disable"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" >
                </TextView>

                <TextView
                    android:id="@+id/number_manually_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/number_manually"
                    android:textColor="@color/support_red"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/chat_what"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three" 
                    android:textStyle="bold">
                </TextView>

                <RelativeLayout
                    android:id="@+id/chat_what_rl "
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/shape_faqs_et_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/chat_what_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/select_an_option"
                        android:textColor="@color/support_gray_more"
                        android:textSize="@dimen/text_size_three" >
                    </TextView>

                    <ImageView
                        android:id="@+id/chat_what_iv"
                        android:layout_width="11dp"
                        android:layout_height="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/chat_to_us_arrow" />
                </RelativeLayout>

                <com.huawei.vodafone.ui.myview.MyListview
                    android:id="@+id/chat_what_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_faqs_et_bg2"
                    android:divider="#cccccc"
                    android:dividerHeight="0.5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@color/transparency"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/request_call_tv"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="20dp"
                    android:background="#c9c9c9"
                    android:gravity="center"
                    android:text="@string/request_call_back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step2_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/call_us"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/request_week"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/size_32" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/request_time"
                    android:textColor="@color/support_red"
                    android:textSize="@dimen/title"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/chat_to_num1"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold"
                    android:visibility="gone" >
                </TextView>

                <TextView
                    android:id="@+id/call_num1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/support_red"
                    android:gravity="center"
                    android:text="@string/call_num1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_three"
                    android:visibility="gone" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/chat_to_num2"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/call_num2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/support_red"
                    android:gravity="center"
                    android:text="@string/call_num2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/call_tip"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/chat_to_num3"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/support_gray_little"
                    android:gravity="center"
                    android:text="@string/call_num3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/chat_to_num4"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/support_gray_little"
                    android:gravity="center"
                    android:text="@string/call_num4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step3_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/request_call_tip1"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three" >
                </TextView>

                <LinearLayout
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/request_call_time_bg"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_37"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dp"
                            android:text="@string/minutes"
                            android:textColor="@color/support_gray_little"
                            android:textSize="@dimen/text_size_one"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/enter_number"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/call_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="0783121212"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/chat_what"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/call_what_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="billing"
                    android:textColor="@color/support_gray_more"
                    android:textSize="@dimen/text_size_three" >
                </TextView>

                <TextView
                    android:id="@+id/cancel_call_tv"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/support_red"
                    android:gravity="center"
                    android:text="@string/cancel_call"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>